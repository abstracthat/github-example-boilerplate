body
  // font-size / line-height is in settings.styl
  font-family font-stack
  // oldstyle numbers
  font-variant-numeric oldstyle-nums
  font-feature-settings "onum"

p, li
  font-size inherit
  line-height inherit
  color black + 20%

p, ul, ol
  rhythm 1

// Placeholder for larger paragraph style
$lead-paragraph
  font-size 1.25em
  line-height 1.5

time
  display inline-block
  font-style italic
  color gray

strong
  font-weight 600

// Lists
ul
  list-style-type square

li
  display list-item
  margin-left 1.3em

// Headers
h1, h2, h3, h4, h5, h6
  font-family header-font-stack

h1
  rhythm 1
  font-size 2.5rem
  line-height 1.2
  font-weight 800

  +above(site)
    rhythm 1.5
    font-size 3.5rem
    line-height 1.08

h2
  rhythm .5
  font-size 1.5rem
  line-height 1.2
  font-weight 400

  +above(mobile)
    font-size 1.625rem

  +above(desktop)
    font-size 1.75rem

h3
  rhythm .25
  font-size 1.375rem
  line-height 1.2
  font-weight 400
  color black + 20%

  +above(mobile)
    font-size 1.4rem

  +above(desktop)
    font-size 1.6rem

h4, h5, h6
  rhythm .25
  font-size 1.125rem
  line-height 1.4
  font-weight 600
  color black + 20%

  +above(desktop)
    font-size 1.125rem

h5, h6
  text-transform uppercase

// Links
a
  link blue 'darken'
